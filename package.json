{
  "name": "app",
  "version": "1.0.0",
  "description": "clean template for a nodejs backend REST application",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/src/index",
    "pretest": "npm run build",
    "test": "mocha dist/test/**/*.js",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary mocha dist/test/**/*.js",
    "migrate": "rm -rf ./dist && tsc --sourceMap false && migrate up --migrations-dir=dist/migrations"
  },
  "author": "Allison Machado Gon√ßalves",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/check-types": "^7.3.1",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^5.2.6",
    "@types/mysql": "^2.15.15",
    "@types/node": "^12.0.0",
    "@types/sinon": "^7.0.11",
    "@types/validator": "^13.1.0",
    "chai": "^4.2.0",
    "faker": "^5.1.0",
    "migrate": "^1.7.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "sinon": "^7.3.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "check-types": "^11.1.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "validator": "^13.1.17",
    "winston": "^3.3.3"
  }
}

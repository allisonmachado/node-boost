{
  "name": "app",
  "version": "1.0.1",
  "author": "Allison Machado GonÃ§alves",
  "description": "Clean template for a nodejs backend REST application",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0 <13.0.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allisonmachado/node-boost.git"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "prebuild": "npm run lint:fix && rm -rf ./dist",
    "build": "tsc",
    "gcp-build": "tsc -p .",
    "prestart": "npm run build",
    "start": "node dist/src/index",
    "pretest": "npm run build",
    "test": "mocha dist/test/**/*.js",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary mocha dist/test/**/*.js",
    "compose:start": "docker-compose up --build",
    "compose:stop": "docker-compose stop",
    "compose:restart": "npm run build && docker-compose restart web",
    "compose:clean": "docker-compose down",
    "migrate:up": "cd ./dist/src/migrations && npx knex@0.21.6 migrate:up",
    "migrate:down": "cd ./dist/src/migrations && npx knex@0.21.6 migrate:down",
    "migrate:latest": "cd ./dist/src/migrations && npx knex@0.21.6 migrate:latest"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/check-types": "^7.3.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^5.2.6",
    "@types/mysql": "^2.15.15",
    "@types/node": "^12.0.0",
    "@types/sinon": "^7.0.11",
    "@types/validator": "^13.1.0",
    "chai": "^4.2.0",
    "faker": "^5.1.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "sinon": "^7.3.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "check-types": "^11.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.6",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "validator": "^13.1.17",
    "winston": "^3.3.3"
  }
}
